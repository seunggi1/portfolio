{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"env": [
				"SITE_URL",
				"DB_SERVICE",
				"SUPABASE_ANON_KEY",
				"SUPABASE_URL",
				"SUPABASE_BUCKET_NAME",
				"ADMIN_CLIENT_URL"
			]
		},
		"lint": {},
		"type-check": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
